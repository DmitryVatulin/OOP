int main(int argc, char const* argv[])
{
	setlocale(LC_ALL, "Russian");
	int b;
	Plumber a1;
	Electrician a2;
	Driver a3;
	Nanny a4;
	Waiter a5;
	Tutor a6;
	Designer a7;
	Pharmacist a8;
	Lawyer a9;
	Manager a10;
	do {

		cout << "Здравствуйте!" << endl << "Пожалуйста,выберите необходимую вам услугу:" << endl << "Нажмите 1 чтобы посмотреть весь список услуг" << endl;
		cin >> b;
		system("cls");
		switch (b)
		{
		case 1: {
			a1.prof();
			a2.prof();
			a3.prof();
			a4.prof();
			a5.prof();
			a6.prof();
			a7.prof();
			a8.prof();
			a9.prof();
			a10.prof();
		}
		default:
			break;
		}
	} while (b != 0);
}
